      <td label="City"><input type="text" value="{{city}}" class="form-control" name="city"></td>
      <td label="State"><input type="text" value="{{state}}" class="form-control" name="state"></td>
      <td label="Address"><input type="text" value="{{address}}" class="form-control" name="address"></td>
      <td label="Description"><input type="text" value="{{descript}}" class="form-control" name="descript"></td>
      <td>         
          <input id="sub2" name="doEdit" type="submit" value="Complete Edit" class='btn btn-success' /></form>
      </td>  
    </tr>
    
  {{else}}
    <h1>No Results Found</h1>
    <a href="viewClient"><h3>View all Clients</h3></a>
  {{/each}}
  </tbody>
</table>
